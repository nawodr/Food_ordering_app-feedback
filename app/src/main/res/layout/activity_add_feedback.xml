<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg"
    tools:context=".addFeedback">

    <Button
        android:id="@+id/btnAddFeedback"
        android:layout_width="245dp"
        android:layout_height="61dp"
        android:layout_marginBottom="384dp"
        android:textSize="20sp"
        android:text="Add Feedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Add Feedback" />

    <EditText
        android:id="@+id/editText_feedback"
        android:layout_width="321dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="feedback"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddFeedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738"
        tools:text="Feedback" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="263dp"
        android:layout_height="36dp"
        android:layout_marginTop="52dp"
        android:text="ADD YOUR FEEDBACK"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>